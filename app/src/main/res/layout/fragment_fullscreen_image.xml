<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#889ADC"
    tools:context=".ui.view.FullscreenImageFragment">

    <ImageButton
        android:id="@+id/back_button"
        style="@style/BackButtonStyle"
        android:background="#DCC5C5"
        android:elevation="1dp"/>

    <TextView
        android:id="@+id/imageName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Vigelos"
        android:textColor="#FFFFFF"
        style="@style/HeaderTitleStyle"
        android:layout_gravity="top|center_horizontal"
        android:elevation="1dp"/>

    <ImageButton
        android:id="@+id/detail_button"
        style="@style/DetailButtonStyle"
        android:background="#DCC5C5"
        android:layout_gravity="top|end"
        android:elevation="1dp"/>

    <ImageView
        android:id="@+id/fullscreen_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Wallpaper Image"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/favorite_button"
        style="@style/FavoriteTabButtonStyle"
        android:background="#DCC5C5"
        android:layout_gravity="bottom|end" />

    <Button
        android:id="@+id/downloadButton"
        style="@style/DownloadButtonStyle"
        android:background="#DCC5C5"
        android:layout_gravity="bottom|center_horizontal"/>


</FrameLayout>