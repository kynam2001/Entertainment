<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi button đang nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B2AFD0" /> <!-- Màu khi nhấn -->
            <corners android:radius="12dp"/>   <!-- Bo góc tùy chỉnh -->
        </shape>
    </item>

    <!-- Trạng thái khi button không nhấn (bình thường) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5DC" /> <!-- Màu bình thường -->
            <corners android:radius="12dp"/>   <!-- Bo góc tùy chỉnh -->
        </shape>
    </item>
</selector>